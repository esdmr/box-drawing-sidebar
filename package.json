{
	"name": "box-drawing-sidebar",
	"displayName": "Box Drawing Sidebar",
	"version": "0.0.1",
	"description": "Sidebar containing Box Drawing characters to insert",
	"categories": [
		"Other"
	],
	"publisher": "esdmr",
	"browser": "./build/extension.js",
	"scripts": {
		"vscode:prepublish": "pnpm run build",
		"lint": "xo src rollup",
		"lint:fix": "pnpm run lint -- --fix",
		"build": "pnpm run build:extension && pnpm run build:webviews",
		"build:extension": "rollup --config rollup/extension.js",
		"build:webviews": "rollup --config rollup/webviews.js",
		"watch": "pnpm run build:extension -- --watch & pnpm run build:webviews -- --watch",
		"clean": "bash clean.sh"
	},
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "box-drawing-sidebar",
					"title": "Box Drawing",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"box-drawing-sidebar": [
				{
					"id": "box-drawing-sidebar.box-drawing",
					"name": "Box Drawing",
					"icon": "resources/box-drawing/icon.svg",
					"type": "webview",
					"visibility": "visible"
				}
			]
		}
	},
	"activationEvents": [
		"onView:box-drawing-sidebar.box-drawing"
	],
	"devDependencies": {
		"@rollup/plugin-node-resolve": "13.1.3",
		"@types/node": "17.0.22",
		"@types/vscode": "1.65.0",
		"@typescript/lib-dom": "npm:@types/web@0.0.58",
		"esbuild": "0.14.27",
		"rollup": "2.70.1",
		"rollup-plugin-esbuild": "4.8.2",
		"xo": "0.48.0"
	},
	"engines": {
		"vscode": "^1.65.0"
	}
}
