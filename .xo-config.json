{
	"rules": {
		"no-await-in-loop": "off",
		"node/no-unsupported-features/es-syntax": [
			"error",
			{
				"ignores": [
					"modules",
					"dynamicImport"
				]
			}
		],
		"unicorn/prefer-json-parse-buffer": [
			"off"
		]
	},
	"overrides": [
		{
			"files": "**.ts",
			"extends": "./.xo-config.ts.json"
		},
		{
			"files": "**.tsx",
			"extends": "./.xo-config.ts.json"
		},
		{
			"files": "**.mts",
			"extends": "./.xo-config.ts.json"
		},
		{
			"files": "**.cts",
			"extends": "./.xo-config.ts.json",
			"rules": {
				"unicorn/prefer-module": "off"
			}
		},
		{
			"files": "**.cjs",
			"rules": {
				"unicorn/prefer-module": "off"
			}
		},
		{
			"files": "src/extension/**",
			"env": [
				"node",
				"worker"
			]
		},
		{
			"files": "rollup/**",
			"env": [
				"node"
			]
		},
		{
			"files": "src/webviews/**",
			"env": [
				"browser"
			]
		}
	]
}
